{
    "name": "gha-artifact-name",
    "version": "1.2.0",
    "description": "Generate pleasing GitHub Action artifact names that match the workflow & run",
    "author": "alpha-tango-kilo <git@heyatk.com>",
    "homepage": "https://github.com/alpha-tango-kilo/gha-artifact-name",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alpha-tango-kilo/gha-artifact-name.git"
    },
    "bugs": {
        "url": "https://github.com/alpha-tango-kilo/gha-artifact-name/issues"
    },
    "private": true,
    "scripts": {
        "build": "ncc build --minify src/index.ts",
        "run": "ncc run src/index.ts",
        "tsc": "tsc --noEmit",
        "test": "jest"
    },
    "keywords": [
        "actions"
    ],
    "license": "AGPL-3.0-only",
    "dependencies": {
        "@actions/core": "^1.10.1",
        "@actions/github": "^6.0.0",
        "glob": "^10.3.10",
        "yaml": "^2.3.4"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/node": "^20.11.4",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vercel/ncc": "^0.38.1",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    },
    "exports": {
        ".": "./dist/index.js"
    },
    "engines": {
        "node": ">=20"
    },
    "jest": {
        "preset": "ts-jest",
        "verbose": true,
        "clearMocks": true,
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testMatch": [
            "**/*.test.ts"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        }
    }
}
